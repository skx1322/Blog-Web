<%- include('partials/header.ejs') %>
    <%- include('partials/navigation.ejs') %>
    <main>
        <h2 style="margin-top: 5rem;">Posts:</h2>
        <div class="configure" style="margin-top: 3rem;">
            <div class="sorting">
                <form action="/sort" method="post">
                    <label for="sorting">Sort By:</label>
                    <select id="sorting">
                        <option value="asc">A-Z</option>
                        <option value="desc">Z-A</option>
                        <option value="new">Newest</option> 
                        <option value="old">Oldest</option> 
                    </select> <!--A selection box-->
                    
                    <input type="submit">
                </form>
            </div>
            <div class="search">
                <form action="/search" method="POST" class="search__form" role="search">
                    <input 
                      type="search"
                      aria-label="Search"
                      id="searchInput"
                      name="searchTerm"
                      placeholder="Seach the site..."
                    >
                    
                  </form>
            </div>
        </div>
        <div class="all-blog-post" style="margin-top: 3rem;">
            <!-- Template -->
            <% Blog.forEach(function(Blogs) { %>
                <div class="blog_">
                    <img src="image/<%= Blogs.blog_image %>" alt="image" class="blog-img" width="384" height="240">
                    <div class="blog-body" style="margin-top: 2rem;">
                        <div class="blog-text">
                            <a class="post-time" href="/blog/<%= Blogs.blog_id %>">
                                <%= Blogs.username %> Â· 
                                <%= Blogs.time_post.toDateString() %>
                            </a>
                            <a class="blog-title" href="/blog/<%= Blogs.blog_id %>
                                " href="test"><%= Blogs.title %>
                            </a>
                            <p class="content" style="text-align: justify;"><%= Blogs.descriptions %></p>
                        </div>
                        <div class="blog-tags" style="margin-top: 1rem;">
                            <p class="Management"><%= Blogs.tags.toUpperCase(); %></p>
                        </div>
                    </div>
                </div> 
            <% }) %>
        </div>
    </main>
<%- include('partials/footer.ejs') %>